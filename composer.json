{
  "name": "eureka/component-validation",
  "description": "PHP validation library.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Validation\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Validation\\Tests\\": "./tests"
    }
  },

  "require": {
    "php": "7.4.*|8.0.*|8.1.*"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "phpstan/phpstan": "^1.4",
    "phpunit/phpcov": "^8.2.0",
    "phpunit/phpunit": "^9.4.0",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/cache": "^v5.1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
